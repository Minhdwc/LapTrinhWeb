
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage1.cshtml";
}
@{
    project_1.Models.DBContext db = new project_1.Models.DBContext();
    int id = ViewBag.Id;
    project_1.Models.Products pro = db.Products.Where(t => t.ProductId == id).FirstOrDefault();
}
<form action="/admin/product/delete/@pro.ProductId" method="post" enctype="multipart/form-data class="d-flex">
    <div class="product container">
        <div class="row">
            <div class="col-md-6">
                <div class="card-img-top mb-5 mb-md-0 shadow-lg">
                    <img class="w-100" src="@pro.ProductImage" />
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-12">
                <h2><strong>Tên sản phẩm:</strong> @pro.ProductName</h2>
                <h3 class="product__price">
                    <strong>Giá tiền:</strong> @pro.ProductPrice.ToString("N0")đ
                </h3>
                <div class="row">
                    <h4>Bạn có muốn xoá ?</h4>
                    <ul class="list-action" style="list-style-type:none">
                        <li>
                            <button class="btn btn-danger" type="submit">Xoá</button>
                        </li>
                        <li>
                            <a href="/admin/product" class="btn btn-success">Huỷ</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        
    </div>
</form>