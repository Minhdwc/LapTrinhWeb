
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage1.cshtml";
}
@{ 
    project_1.Models.DBContext db = new project_1.Models.DBContext();
    int id = ViewBag.Id;
    project_1.Models.Brands Model = db.Brands.Where(t => t.BrandId == id).FirstOrDefault();

}

@using (Html.BeginForm("Update", "Brands", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="container py-5 h-100">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col-12 col-lg-9 col-xl-7">
                    <div class="card shadow-2-strong card-registration shadow-lg" style="border-radius: 15px;">
                        <div class="card-body p-4 p-md-5">
                            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 text-center">Edit</h3>
                            <form>
                                <div class="row">
                                    <div class="mb-4">
                                        <div class="form-outline">
                                            @Html.LabelFor(t => Model.BrandName)
                                            @Html.TextBoxFor(t => Model.BrandName, new { placeholder = "Brand Name", @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-4 pt-2">
                                    <button type="submit" class="btn btn-primary">Edit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}