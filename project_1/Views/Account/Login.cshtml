@model project_1.ViewModel.LoginVM

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    <div class="container">
        <div class="container py-5 h-100">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col-12 col-lg-9 col-xl-7">
                    <div class="card1 shadow-2-strong card-registration shadow-lg" style="border-radius: 15px;">
                        <div class="card-body p-4 p-md-5">
                            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 text-center">Login</h3>
                            <form>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-outline">
                                            @Html.LabelFor(t => t.UserName)
                                            @Html.TextBoxFor(t => t.UserName, new { placeholder = "UserName", @class = "form-control" })
                                            @Html.ValidationMessageFor(t => t.UserName, "", new { @class = "custom-error-message" })
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-outline">
                                            @Html.LabelFor(t => t.Password)
                                            @Html.PasswordFor(t => t.Password, new { placeholder = "Password", @class = "form-control" })
                                            @Html.ValidationMessageFor(t => t.Password, "", new { @class = "custom-error-message" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        @Html.ValidationSummary(null, new { @class = "custom-error-message" })
                                    </div>
                                    <p>You don't have account. <a href="/Account/Register">Register</a></p>
                                    <div class="col-md-4"></div>
                                    <div class="col-md-4 button">
                                        <input class="btn btn-success btn-lg" type="submit" value="Login" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
